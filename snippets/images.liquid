{%-liquid
  if section.index == 1
    assign fetchPriority = true
    assign eager = true
  endif
%}

<img src="{{ image | image_url: width: width, height: height }}" 
  width="{{ width }}"
  height="{{ height }}"
  alt="{{ image.alt }}" 
  {% if eager != true %}
    loading="lazy" 
  {% else %}
    loading="eager" 
  {% endif %}
  class="{% if fetchPriority != true %}lazyload{% endif %} {{ class }}"
  {% if fetchPriority == true %}fetchpriority="high"{% endif %}
  >
  